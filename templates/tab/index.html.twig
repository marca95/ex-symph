<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Test de tableau</title>
    <link rel="stylesheet" href="{{ asset ('node_modules/bootstrap/dist/css/bootstrap.css')}}">
  </head>

  <body>
    <table class="table">
        {% for note in notes %}
            <tr>
                <td>{{ note }}</td>
            </tr>
        {% endfor %}
    </table>
    <div class="alert alert-info">
        <p>Nombre de notes : {{ notes | length }}</p>
        <p>Note min : {{ min(notes) }}</p>
        <p>Note max : {{ max(notes) }}</p>
    </div>
  </body>
</html>
